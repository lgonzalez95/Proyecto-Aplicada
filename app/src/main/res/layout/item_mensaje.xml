<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp"
    android:id="@+id/cardview_mensajes">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_detalle"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@android:color/white"
            android:padding="8dp"
            android:id="@+id/btn_detalleMensaje"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asunto"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorPrimaryDark"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/txtview_titulo_asunto"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duda de depósito"
            android:layout_marginLeft="5dp"
            android:textSize="20sp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txtView_asunto"
            android:layout_below="@id/txtview_titulo_asunto"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#3c454546"
            android:layout_margin="5dp"
            android:id="@+id/view"
            android:layout_below="@id/txtView_asunto"
            >

        </View>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripcion: "
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:textSize="15sp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView3"
            android:layout_below="@id/view"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Cuándo deposita reubicación?"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:textSize="15sp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/txtView_descripcion"
            android:layout_below="@id/view"
            android:layout_toRightOf="@id/textView3"
            android:lines="1"

            />
    </RelativeLayout>
</android.support.v7.widget.CardView>
